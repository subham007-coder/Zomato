<% layout('/layouts/boilerplate.ejs') %>
  <body>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">

      <% for( let listing of allListings) { %>
        <div class="card col" style="width: 18rem;">
          <img src="<%= listing.image %>" class="card-img-top" alt="img">
      <div class="card-body d-flex gap-5">
        
        <div class="title d-flex row">
          <h6 class="card-text fs-6"><%= listing.title %></h6>
          <p class="card-text"><%= listing.location %></p>
        </div>
        
        <div class="title d-flex row">
          <p class="card-text">â‚¹ <%= listing.price.toLocaleString("en-IN") %></p>
          <p class="card-text"><%= listing.time %></p>
        </div>


      </div>
      
    </div>
    <% } %>
    
  </div>
