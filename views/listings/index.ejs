<% layout('/layouts/boilerplate.ejs') %>
<body>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for( let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link mb-3">
      <div class="card col">
        <img
          src="<%= listing.image %>"
          class="card-img-top mt-2 mb-3"
          style="height: 15rem"
          alt="img"
        />

        <div class="card-body d-flex gap-5">
          <div class="title d-flex row">
            <h6 class="card-text fs-6"><%= listing.title %></h6>
            <p class="card-text text-secondary"><%= listing.location %></p>
          </div>

          <div class="title d-flex row">
            <p class="card-text text-end text-secondary">
              â‚¹<%= listing.price.toLocaleString("en-IN") %> for one
            </p>
            <p class="card-text text-end"><%= listing.time %></p>
          </div>
        </div>
      </div>
    </a>
    


     <!-- for open orderlist -->

  <div
  class="offcanvas offcanvas-end"
  tabindex="-1"
  id="offcanvasRight"
  aria-labelledby="offcanvasRightLabel"
>
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasRightLabel">Your Cart</h5>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="offcanvas"
      aria-label="Close"
    ></button>
  </div>
  <div class="offcanvas-body">
    <!-- orderItems -->

    <div class="item d-flex gap-2">
      <p><%= listing.cart %></p>
    </div>
  </div>
</div>
<% } %>

  </div>
</body>
